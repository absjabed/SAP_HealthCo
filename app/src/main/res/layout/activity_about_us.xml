<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.absjbd.sap_healthco.Activity.AboutUsActivity">


    <include
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="অ্যাপ সম্পর্কে"
        android:textStyle="normal"
        android:textSize="22sp"
        android:background="#87BB70"
        android:gravity="center"
        android:textColor="@color/icons"
        android:padding="6dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textColor="#000000"
        android:text="@string/aboutus"
        android:textStyle="normal"
        android:textSize="15sp" />
    <TextView
        android:layout_width="match_parent"
        android:padding="7dp"
        android:layout_height="wrap_content"
        android:text="অ্যাপ প্রকল্পটির বাস্তবায়ন টীম :"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="6dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="  মোঃ  আবু বকর  সিদ্দীক জাবেদ,\n  প্রিমিয়ার বিশ্ববিদ্যালয়\n\n  এ্যানি বিশ্বাস,\n  প্রিমিয়ার বিশ্ববিদ্যালয়"
        android:textStyle="italic"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:text="প্রকল্পটি প্রস্তাবিত করেছেন  :"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:text="@string/teammember"
        android:textStyle="italic"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scrollbars="vertical"/>


    </LinearLayout>
    </ScrollView>

</LinearLayout>
